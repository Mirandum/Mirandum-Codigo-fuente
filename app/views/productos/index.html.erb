<div class="container">
	
	<%= search_form_for @search do |f|%>
		<!--filtro por referencia-->
		<div class="field ">
					
			<%= f.label :tipo_cont, "Buscar por tipo"%>  
			<%= f.text_field :tipo_cont %>
		</div>

		<!--filtro por precio-->
		<div class="field ">
					
			<%= f.label :precio_gteq, "Precio entre"%>  
			<%= f.text_field :precio_gteq %>
			<%= f.label :precio_lteq, "y"%>  <%= f.text_field :precio_lteq %>
			
			
		</div>

		<div class="actions">
			<%= f.submit "Buscar"%>
		</div>		
	<%end%>
	
</div>



